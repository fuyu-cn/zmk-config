#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

/ {
    behaviors {
        ht: hold_tap {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "tap-preferred";
            tapping-term-ms = <220>;
            quick-tap-ms = <150>;
            require-prior-idle-ms = <100>;
            bindings = <&kp>, <&kp>;
        };

        vidshot: vidshot {
            compatible = "zmk,behavior-mod-morph";
            label = "VIDSHOT";
            bindings = <&kp LG(LS(NUMBER_4))>, <&kp LG(LS(N5))>;

            #binding-cells = <0>;
            mods = <(MOD_LCTL|MOD_LSFT|MOD_LALT|MOD_LGUI|MOD_RSFT)>;
        };
    };

    conditional_layers { compatible = "zmk,conditional-layers"; };

    combos {
        compatible = "zmk,combos";

        enter {
            bindings = <&kp ENTER>;
            key-positions = <33 16>;
            layers = <0 1>;
        };

        backspace {
            bindings = <&kp LC(BACKSPACE)>;
            key-positions = <9 8>;
            layers = <0>;
        };

        escape {
            bindings = <&kp ESCAPE>;
            key-positions = <1 0>;
        };

        nosticky {
            bindings = <&kp F24>;
            key-positions = <33 30>;
        };

        capsword {
            bindings = <&caps_word>;
            key-positions = <13 16>;
        };

        bootloader {
            bindings = <&bootloader>;
            key-positions = <0 31>;
            layers = <0 1>;
            require-prior-idle-ms = <1000>;
        };

        sh_enter {
            bindings = <&kp LS(ENTER)>;
            key-positions = <16 32>;
            layers = <0 1>;
        };

        MACDEL {
            bindings = <&kp LA(BACKSPACE)>;
            key-positions = <8 9>;
            layers = <1>;
        };

        reset {
            bindings = <&sys_reset>;
            key-positions = <0 30>;
        };
    };

    macros {
        defbt0: defbt0 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&bt BT_SEL 0 &to 0>;
            label = "DEFBT0";
        };

        btmac1: btmac1 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&bt BT_SEL 1 &to 1>;
            label = "BTMAC1";
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            display-name = "Default Layer";
            bindings = <
&kp Q  &kp W  &kp F  &kp P        &kp B        &kp J  &kp L                &kp U      &kp Y    &kp APOS
&kp A  &kp R  &kp S  &kp T        &kp G        &kp M  &kp N                &kp E      &kp I    &kp O
&kp Z  &kp X  &kp C  &kp D        &kp V        &kp K  &kp H                &kp COMMA  &kp DOT  &kp FSLH
                     &lt 2 SPACE  &lt 3 TAB    &mo 4  &mt LEFT_SHIFT BSPC
            >;
        };

        MACDEF {
            bindings = <
&trans  &trans  &trans  &trans  &trans    &trans  &trans           &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans    &trans  &trans           &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans    &trans  &trans           &trans  &trans  &trans
                        &trans  &trans    &trans  &lt 5 BACKSPACE
            >;
        };

        left_layer {
            display-name = "Left Layer";
            bindings = <
&kp EXCLAMATION  &kp AT_SIGN   &kp HASH          &kp DOLLAR      &kp PRCNT    &kp CARET       &kp AMPS              &kp ASTERISK           &kp EQUAL         &kp PLUS
&sk LEFT_GUI     &sk LEFT_ALT  &sk LEFT_CONTROL  &sk LEFT_SHIFT  &kp EQUAL    &kp LEFT_BRACE  &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp RIGHT_BRACE   &kp SEMICOLON
&kp GRAVE        &trans        &trans            &to 0           &to 1        &kp LESS_THAN   &kp LBKT              &kp RBKT               &kp GREATER_THAN  &kp BACKSLASH
                                                 &none           &none        &kp MINUS       &kp UNDERSCORE
            >;
        };

        right_layer {
            display-name = "Right Layer";
            bindings = <
&kp N1        &kp N2        &kp N3            &kp N4          &kp N5    &kp N6     &kp N7         &kp N8       &kp N9     &kp N0
&sk LEFT_GUI  &sk LEFT_ALT  &sk LEFT_CONTROL  &sk LEFT_SHIFT  &trans    &kp LEFT   &kp DOWN       &kp UP       &kp RIGHT  &kp COLON
&kp TILDE     &kp K_CUT     &kp K_COPY        &kp K_PASTE     &trans    &kp HOME   &kp PAGE_DOWN  &kp PAGE_UP  &kp END    &kp PIPE
                                              &none           &none     &kp ENTER  &kp EQUAL
            >;
        };

        tri_layer {
            display-name = "Tri Layer";
            bindings = <
&kp F1      &kp F2        &kp F3        &kp F4        &kp F5          &kp F6           &kp F7          &kp F8            &kp F9        &kp F10
&kp C_PREV  &kp C_VOL_DN  &kp C_VOL_UP  &kp C_NEXT    &kp F11         &kp F12          &sk LEFT_SHIFT  &sk LEFT_CONTROL  &sk LEFT_ALT  &sk LEFT_GUI
&bt BT_CLR  &defbt0       &btmac1       &bt BT_SEL 2  &bt BT_SEL 3    &kp PRINTSCREEN  &kp SCROLLLOCK  &kp PAUSE_BREAK   &sys_reset    &bootloader
                                        &kp C_PLAY    &kp C_STOP      &none            &none
            >;
        };

        mac_tri {
            display-name = "Tri Layer";
            bindings = <
&kp F1      &kp F2        &kp F3        &kp F4        &kp F5          &kp F6    &kp F7          &kp F8            &kp F9        &kp F10
&kp C_PREV  &kp C_VOL_DN  &kp C_VOL_UP  &kp C_NEXT    &kp F11         &kp F12   &sk LEFT_SHIFT  &sk LEFT_CONTROL  &sk LEFT_ALT  &sk LEFT_GUI
&bt BT_CLR  &defbt0       &btmac1       &bt BT_SEL 2  &bt BT_SEL 3    &vidshot  &kp SCROLLLOCK  &kp PAUSE_BREAK   &sys_reset    &bootloader
                                        &kp C_PLAY    &kp C_STOP      &none     &none
            >;
        };
    };
};
